{
  "name": "next-site",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "run-p dev:next assets:watch",
    "dev:next": "next dev --turbopack",
    "build": "pnpm assets:copy && next build --turbopack",
    "migrate:posts": "node scripts/migrate-posts.js",
    "assets:copy": "cpx \"src/content/posts/**/assets/**\" public/posts",
    "assets:watch": "cpx \"src/content/posts/**/assets/**\" public/posts -w",
    "start": "next start",
    "lint": "eslint"
  },
  "dependencies": {
    "@giscus/react": "^3.1.0",
    "gray-matter": "^4.0.3",
    "next": "15.5.4",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "remark": "^15.0.1",
    "remark-html": "^16.0.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "cpx": "^1.5.0",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "npm-run-all": "^4.1.5",
    "typescript": "^5"
  }
}
